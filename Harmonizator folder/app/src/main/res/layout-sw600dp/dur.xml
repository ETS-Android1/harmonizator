<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav_hfunkciedur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:onClick="otazka"
                app:icon="@drawable/abc_vector_test"
                app:iconTint="#FFFFFF"
                tools:ignore="OnClick" />

            <View
                android:id="@+id/view4"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:layout_weight="0.05" />

            <TextView
                android:id="@+id/titleLesson"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="@string/hfunkciedur"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/counter"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="1/8"
            android:textSize="40sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/zadanie"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/task_hdur"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/img_dur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.8"
            android:src="@drawable/fd0" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2" />

        <LinearLayout
            android:id="@+id/funkcied"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tonic_dur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#302D2D"
                android:onClick="vyhodnot"
                android:text="@string/tonic"
                android:textAllCaps="false"
                android:textColor="@color/textulohy"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:backgroundTintMode="multiply"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/subd_dur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#302D2D"
                android:onClick="vyhodnot"
                android:text="@string/subd"
                android:textAllCaps="false"
                android:textColor="@color/textulohy"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:backgroundTintMode="multiply"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/dom_dur"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#302D2D"
                android:onClick="vyhodnot"
                android:text="@string/dom"
                android:textAllCaps="false"
                android:textColor="@color/textulohy"
                android:textSize="25sp"
                app:backgroundTint="#FFFFFF"
                app:backgroundTintMode="multiply"
                tools:ignore="OnClick" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>